<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="@dimen/shadow_circle_icon_size_max"
                android:endColor="#00000000"
                android:startColor="#000000"
                android:centerColor="#000"
                android:centerY="52%"
                android:angle="-90.0" />
        </shape>
    </item>
    <item android:bottom="2dp">
        <shape
            android:shape="oval">
            <gradient android:type="linear"
                android:endColor="@color/btn_gradient_color_end"
                android:startColor="@color/btn_gradient_color_start"
                android:angle="-90.0" />
        </shape>
    </item>

</layer-list>